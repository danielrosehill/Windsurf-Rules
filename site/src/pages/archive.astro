---
import Layout from '../layouts/Layout.astro';
import { readdirSync, readFileSync, statSync } from 'fs';
import { join } from 'path';

// Read archived versions
const archivePath = join(process.cwd(), '..', 'archived-versions');
const archiveFiles = readdirSync(archivePath)
  .filter(file => file.endsWith('.md'))
  .map(file => {
    const filePath = join(archivePath, file);
    const content = readFileSync(filePath, 'utf-8');
    const stats = statSync(filePath);
    
    // Extract title and date
    const titleMatch = content.match(/^# (.+)$/m);
    const title = titleMatch ? titleMatch[1] : file.replace('.md', '');
    
    // Parse date from filename (DDMMYY format)
    const dateMatch = file.match(/^(\d{2})(\d{2})(\d{2})\.md$/);
    let formattedDate = 'Unknown';
    if (dateMatch) {
      const [, day, month, year] = dateMatch;
      const fullYear = `20${year}`;
      formattedDate = `${day}/${month}/${fullYear}`;
    }
    
    // Get file size
    const sizeKB = Math.round(stats.size / 1024);
    
    // Count lines
    const lineCount = content.split('\n').length;
    
    return {
      filename: file,
      title,
      date: formattedDate,
      size: sizeKB,
      lines: lineCount,
      modified: stats.mtime,
      content: content.substring(0, 500) + (content.length > 500 ? '...' : '')
    };
  })
  .sort((a, b) => b.modified.getTime() - a.modified.getTime());
---

<Layout title="Windsurf Rules Archive">
  <div class="px-4 sm:px-0">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Rules Archive</h1>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
        Historical versions of Daniel's Windsurf AI assistant rules and configuration.
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">
          {archiveFiles.length} Archived Versions
        </h2>
      </div>
      
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        {archiveFiles.map((file) => (
          <div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                    {file.title}
                  </h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                    {file.date}
                  </span>
                </div>
                
                <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
                  <span class="flex items-center">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    {file.lines} lines
                  </span>
                  <span class="flex items-center">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                    {file.size} KB
                  </span>
                  <span class="flex items-center">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Modified {file.modified.toLocaleDateString()}
                  </span>
                </div>
                
                <div class="mt-3">
                  <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3">
                    {file.content.replace(/^#+ .+$/gm, '').replace(/\n+/g, ' ').trim()}
                  </p>
                </div>
              </div>
              
              <div class="ml-6 flex-shrink-0">
                <a href={`/archive/${file.filename.replace('.md', '')}`}
                   class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                  View
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-8 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
            About the Archive
          </h3>
          <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
            <p>
              This archive contains historical versions of Daniel's Windsurf AI assistant rules. 
              Each version represents a snapshot of the configuration at a specific point in time, 
              allowing you to track the evolution of the rules and understand how they've changed over time.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
